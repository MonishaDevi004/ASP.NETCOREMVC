@model CodeFirstApproachCore.Models.Medicine;
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
    <dl class="row">

        <dt class="col-sm-2">
            <label asp-for="@Model.MedicineName"></label>
        </dt>
        <dd class="col-sm-10">
            <label>@Model.MedicineName</label>
        </dd>

        <dt class="col-sm-2">
            <label asp-for="@Model.MedicineDescription"></label>
        </dt>
        <dd class="col-sm-10">
            <label>@Model.MedicineDescription</label>
        </dd>

        <dt class="col-sm-2">
            <label asp-for="@Model.MedicinePrice"></label>
        </dt>
        <dd class="col-sm-10">
            <label>@Model.MedicinePrice</label>
        </dd>

        <dt class="col-sm-2">
            <label asp-for="@Model.Quantity"></label>
        </dt>
        <dd class="col-sm-10">
            <label>@Model.Quantity</label>
        </dd>

    </dl>
</div>

